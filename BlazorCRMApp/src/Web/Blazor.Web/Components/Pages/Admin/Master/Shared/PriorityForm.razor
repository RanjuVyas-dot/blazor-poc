<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@(priorityModal.Id > 0 ? "Edit priority" : "Add priority")</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <EditForm Model="priorityModal" OnValidSubmit="Save">
                        <DataAnnotationsValidator />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <InputText @bind-Value="priorityModal.Title" class="form-control" placeholder="Title" />
                                <ValidationMessage For="@(()=>priorityModal.Title)" class="error-text" />
                            </div>
                            <div class="form-group">
                                <label for="Color">Color</label>
                                <InputText type="color" @bind-Value="priorityModal.Color" class="form-control" placeholder="Color" />
                                <ValidationMessage For="@(()=>priorityModal.Color)" class="error-text" />
                            </div>
                            <div class="form-check">
                                <InputCheckbox @bind-Value="priorityModal.IsActive" class="form-check-input" id="IsActive" />
                                <label class="form-check-label" for="IsActive">Is Active</label>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="button" class="btn btn-outline-secondary" @onclick="CancelForm">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </EditForm>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>









